bindsym XF86AudioPlay exec playerctl play
bindsym XF86AudioPause exec playerctl pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous
bindsym $mod+Shift+period exec systemctl suspend
bindsym $mod+Ctrl+Shift+x exec i3lock
bindsym $mod+d exec rofi -show run
bindsym $mod+Shift+d exec krunner

# Startup
exec vivaldi
exec code
exec alacritty
exec google-chrome-stable
exec spotify
# Startup in background
# exec copyq
exec_always feh --bg-scale "/home/$USER/Pictures/Background/wallpaper.jpg"

# Auto set workspace
assign [class="obsidian"] $ws1
assign [class="Vivaldi-stable"] $ws1
assign [class="alacritty"] $ws2
assign [class="Code"] $ws3
assign [class="Google-chrome"] $ws4
assign [class="Spotify"] $ws9
